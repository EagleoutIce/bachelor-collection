}}

\newcommand*\sirius@Property[3][]{
  \global\advance\c@sirius@internal@id\@ne
  \edef\@elem@currid{\number\c@sirius@internal@id}%
  \pgfkeys{/sirius/property/.cd,defaults,#1,name=#2}%
  \g@addto@macro\sirius@current@entries{{
    \sirius@t id\sirius@t: \sirius@t\sirius@elem@id\sirius@t,
    \sirius@t tag\sirius@t: \sirius@t\sirius@elem@tag\sirius@t,
    \sirius@t name\sirius@t: \sirius@t\sirius@elem@name\sirius@t,
    \sirius@t formula\sirius@t: \sirius@t#3\sirius@t
  }}%
}

\long\def\sirius@Model#1#2#3#4{ \sirius@t model\sirius@t: {
  \sirius@t startYear\sirius@t: #1,
  \sirius@t endYear\sirius@t: #2,
  \sirius@t connectors\sirius@t: #3,
  \sirius@t rootBlocks\sirius@t: [#4]
}}

